<?xml version="1.0" encoding="utf-8"?>
<project name="breeze" default="build">

	<target name="template">
		<mkdir dir=".shackmenu" />
		<copy todir=".shackmenu" overwrite="true">
			<fileset dir="shackmenu/modules/mod_shackmenu" />
		</copy>
		<zip destfile="mod_shackmenu.zip" basedir=".shackmenu" />
		<delete dir=".shackmenu" />
		
		<mkdir dir=".shackmenu" />
		<copy todir=".shackmenu" overwrite="true">
			<fileset dir="shackmenu/plugins/system" />
		</copy>
		<zip destfile="plg_system_shackmenu.zip" basedir=".shackmenu" />
		<delete dir=".shackmenu" />
	</target>
	
	<target name="zipper">
		<copy file="mod_shackmenu.zip" tofile="${path.zip}/shackmenu/mod_shackmenu.zip" overwrite="true" />
		<copy file="plg_system_shackmenu.zip" tofile="${path.zip}/shackmenu/plg_system_shackmenu.zip" overwrite="true" />
	</target>
	
</project>